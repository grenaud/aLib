
CXX      = g++
BAMTOOLS= /mnt/solexa/bin/bamtools-2.2.2/
LIBGAB   = /home/gabriel_renaud/lib/

CXXFLAGS  = -lm -O3 -Wall -I${LIBGAB}  -I${BAMTOOLS}/include/ -c
LDFLAGS  = ${BAMTOOLS}/lib/libbamtools.a -lz


all: fastq2bam 

fastq2bam.o:	fastq2bam.cpp
	${CXX} ${CXXFLAGS} fastq2bam.cpp


fastq2bam:	fastq2bam.o ${LIBGAB}utils.o ${LIBGAB}PutProgramInHeader.o
	${CXX} -o $@ $^ $(LDFLAGS)

clean :
	rm -f fastq2bam.o fastq2bam

